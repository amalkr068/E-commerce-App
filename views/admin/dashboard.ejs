<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Nunito Sans', sans-serif;
            display: flex;
            height: 100vh;
            background-color: #f4f7fc;
        }

        .sidebar {
            width: 250px;
            background-color: #2c3e50;
            color: white;
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            position: fixed;
            height: 100%;
        }

        .sidebar h2 {
            color: white;
            text-align: center;
            margin-bottom: 30px;
        }

        .sidebar ul {
            list-style-type: none;
            padding: 0;
        }

        .sidebar ul li {
            margin: 15px 0;
        }

        .sidebar ul li a {
            color: white;
            text-decoration: none;
            font-size: 18px;
            padding: 10px;
            display: block;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .sidebar ul li a:hover {
            background-color: #34495e;
        }

        .main-content {
            margin-left: 250px;
            width: 100%;
            padding: 30px;
            flex-grow: 1;
        }

        .section {
            display: none;
        }

        .active {
            display: block;
        }

        .header {
            background-color: #34495e;
            color: white;
            padding: 20px;
            text-align: center;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .content {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h2>Admin Panel</h2>
        <ul>
            <li><a href="javascript:void(0)" onclick="showSection('dashboard')">Dashboard</a></li>
            <li><a href="javascript:void(0)" onclick="showSection('customers')">Customers</a></li>
            <li><a href="javascript:void(0)" onclick="showSection('category')">Categories</a></li>
            <li><a href="javascript:void(0)" onclick="showSection('brands')">Brands</a></li>
            <li><a href="javascript:void(0)" onclick="showSection('add-product')">Add Product</a></li>
            <li><a href="javascript:void(0)" onclick="showSection('products')">Products</a></li>
            <li><a href="javascript:void(0)" onclick="showSection('coupons')">Coupons</a></li>
            <li><a href="javascript:void(0)" onclick="showSection('banner')">Banner</a></li>
            <li><a href="javascript:void(0)" onclick="showSection('orders')">Orders</a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="header">
            Admin Dashboard
        </div>
        <div class="content">
            <!-- Dashboard Section -->
            <div id="dashboard" class="section active">
                <h3>Dashboard</h3>
                <p>Welcome to the Admin Dashboard!</p>
            </div>

            <!-- Customers Section -->
            <div id="customers" class="section">
                <h3>Customers</h3>
                <p>Here you can view and manage customers.</p>
            </div>

            <!-- Category Section -->
            <div id="category" class="section">
                <h3>Categories</h3>
                <p>Here you can manage categories of products.</p>
            </div>

            <!-- Brands Section -->
            <div id="brands" class="section">
                <h3>Brands</h3>
                <p>Manage your product brands here.</p>
            </div>

            <!-- Add Product Section -->
            <div id="add-product" class="section">
                <h3>Add Product</h3>
                <p>Here you can add new products to your inventory.</p>
            </div>

            <!-- Products Section -->
            <div id="products" class="section">
                <h3>Products</h3>
                <p>Manage your existing products here.</p>
            </div>

            <!-- Coupons Section -->
            <div id="coupons" class="section">
                <h3>Coupons</h3>
                <p>Create and manage discount coupons here.</p>
            </div>

            <!-- Banner Section -->
            <div id="banner" class="section">
                <h3>Banner</h3>
                <p>Manage your site's banner here.</p>
            </div>

            <!-- Orders Section -->
            <div id="orders" class="section">
                <h3>Orders</h3>
                <p>View and manage customer orders here.</p>
            </div>
        </div>
    </div>

    <script>
        function showSection(sectionId) {
            // Hide all sections
            const sections = document.querySelectorAll('.section');
            sections.forEach(section => section.classList.remove('active'));
            
            // Show the clicked section
            const activeSection = document.getElementById(sectionId);
            activeSection.classList.add('active');
        }
    </script>
</body>
</html>
