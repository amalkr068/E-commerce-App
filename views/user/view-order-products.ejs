<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ordered Products</title>

  <!-- Bootstrap 4/5 CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Card Image Styling */
    .card-img-top {
      object-fit: cover;
      height: 200px;
      border-radius: 10px;
      transition: transform 0.3s ease;
    }

    /* Hover effect on images */
    .card:hover .card-img-top {
      transform: scale(1.05);
    }

    /* Card Shadows and Hover Effect */
    .card {
      border: none;
      border-radius: 15px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      transition: box-shadow 0.3s ease, transform 0.3s ease;
    }

    /* Hover effect for cards */
    .card:hover {
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
      transform: translateY(-5px);
    }

    /* Background Gradient */
    body {
      background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
      font-family: 'Poppins', sans-serif;
    }

    /* Centered Heading */
    h1 {
      color: #333;
      text-align: center;
      font-size: 3rem;
      font-weight: 600;
      margin-bottom: 50px;
      text-transform: uppercase;
    }

    /* Padding and margin adjustments */
    .container {
      padding: 30px;
    }

    .card-body {
      padding: 20px;
    }

    .card-title {
      font-size: 1.5rem;
      font-weight: 600;
      color: #333;
    }

    .card-text {
      font-size: 1rem;
      color: #555;
    }

    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
      padding: 10px 20px;
      border-radius: 30px;
      font-size: 1.1rem;
      transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }
  </style>
</head>
<body>

  <h1>Ordered Products</h1>

  <!-- Container to hold products -->
  <div class="container my-5">
    <div class="row">
      <% for (let i = 0; i < products.length; i++) { %>
      <!-- Product Card -->
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
        <div class="card">
          <img src="/uploads/re-image/<%= products[i].productId.productImage[0] %>" alt="Product Image" >
          <div class="card-body">
            <h5 class="card-title"><%= products[i].productId.productName %></h5>
            <p class="card-text"><%= products[i].productId.description %></p>
            <p class="card-text"><strong>Price: ₹<%= products[i].productId.salePrice %></strong></p>
            <p class="card-text"><strong>Quantity: <%= products[i].quantity %></strong></p>
            <p class="card-text"><strong>Total: ₹<%= products[i].quantity * products[i].productId.salePrice %></strong></p>
            <a href="/productDetails?id=<%= products[i].productId._id %>" class="btn btn-primary">View Details</a>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>

  <!-- Bootstrap 5 JS CDN -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>

</body>
</html>
