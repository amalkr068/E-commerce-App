<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ordered Products</title>

  <!-- Bootstrap 4/5 CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  

  <style>
    body {
      background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
      font-family: 'Poppins', sans-serif;
    }

    h1 {
      color: #333;
      text-align: center;
      font-size: 2.5rem;
      font-weight: 600;
      margin-bottom: 50px;
      text-transform: uppercase;
    }

    .container {
      padding: 30px;
    }

    /* Card Styling */
    .card {
      border: none;
      border-radius: 15px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
      background-color: #fff;
      overflow: hidden;
    }

    .card-body {
      padding: 15px;
    }

    .btn-action {
      font-size: 1rem;
      padding: 10px;
      margin-top: 10px;
      width: 100%;
      border-radius: 5px;
      transition: 0.3s ease;
    }

    .btn-action:hover {
      opacity: 0.9;
    }

    .btn-cancel {
      background-color: #d9534f;
      color: white;
    }

    .btn-return {
      background-color: #f0ad4e;
      color: white;
    }

    /* Order Status Tracker */
    .order-tracker {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin: 30px 0;
      padding: 0 10px;
    }

    .tracker-step {
      text-align: center;
      position: relative;
    }

    .tracker-step::after {
      content: '';
      position: absolute;
      left: 50%;
      top: 20px;
      width: 50%;
      height: 3px;
      background-color: #ddd;
      z-index: -1;
    }

    .tracker-step:last-child::after {
      content: none;
    }

    .tracker-step .step-icon {
      font-size: 2rem;
      background-color: #fff;
      padding: 10px;
      border-radius: 50%;
      border: 3px solid #ddd;
      transition: all 0.3s ease;
    }

    .tracker-step.completed .step-icon {
      background-color: #28a745;
      border-color: #28a745;
    }

    .tracker-step.pending .step-icon {
      background-color: #f0ad4e;
      border-color: #f0ad4e;
    }

    .tracker-step .step-label {
      font-size: 0.9rem;
      margin-top: 5px;
      color: #333;
    }

    /* Product Card Layout */
    .product-card img {
      object-fit: cover;
      height: 200px;
      border-radius: 10px;
    }

    .card-title {
      font-size: 1.5rem;
      font-weight: 600;
      color: #333;
    }

    .card-text {
      font-size: 1rem;
      color: #555;
    }

    /* Adjust Button Display */
    .order-actions {
      display: flex;
      justify-content: center;
      margin-top: 30px;
    }
  </style>
</head>
<body>

  <h1>Ordered Products</h1>

  <div class="container my-5">
    <!-- Order Tracking Section -->
    <div class="order-tracker">
      <!-- Order Tracking Steps -->
      <div class="tracker-step <%= order.orderStatus == 1 ? 'completed' : 'pending' %>">
        <div class="step-icon">🛒</div>
        <div class="step-label">Order Placed</div>
      </div>
      <div class="tracker-step <%= order.orderStatus == 2 ? 'completed' : 'pending' %>">
        <div class="step-icon">📦</div>
        <div class="step-label">Packed</div>
      </div>
      <div class="tracker-step <%= order.orderStatus == 3 ? 'completed' : 'pending' %>">
        <div class="step-icon">🚚</div>
        <div class="step-label">Shipping</div>
      </div>
      <div class="tracker-step <%= order.orderStatus == 4 ? 'completed' : 'pending' %>">
        <div class="step-icon">📍</div>
        <div class="step-label">Out for Delivery</div>
      </div>
      <div class="tracker-step <%= order.orderStatus == 5 ? 'completed' : 'pending' %>">
        <div class="step-icon">✅</div>
        <div class="step-label">Delivered</div>
      </div>
    </div>

    <!-- Order Action Buttons -->
    <div class="order-actions">
      <% if (order.orderStatus ==1) { %>
        <button class="btn btn-cancel btn-action" onclick="cancelOrder()">Cancel Order</button>
      <% } else if (order.orderStatus == 5) { %>
        <button class="btn btn-return btn-action" onclick="returnOrder('<%= order._id%>')">Return Order</button>
      <% } %>
    </div>

    <!-- Products List -->
    <div class="row">
      <% for (let i = 0; i < products.length; i++) { %>
      <!-- Product Card -->
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
        <div class="card product-card">
          <img src="/uploads/re-image/<%= products[i].productId.productImage[0] %>" alt="Product Image">
          <div class="card-body">
            <h5 class="card-title"><%= products[i].productId.productName %></h5>
            <p class="card-text"><%= products[i].productId.description %></p>
            <p class="card-text"><strong>Price: ₹<%= products[i].productId.salePrice %></strong></p>
            <p class="card-text"><strong>Quantity: <%= products[i].quantity %></strong></p>
            <p class="card-text"><strong>Total: ₹<%= products[i].quantity * products[i].productId.salePrice %></strong></p>
            <a href="/productDetails?id=<%= products[i].productId._id %>" class="btn btn-primary">View Details</a>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


  <script>
    // Placeholder functions for cancel and return actions
   // function cancelOrder() {
     // alert('Cancelling the order.');
      // Implement the cancellation logic here
   // }

    function returnOrder(orderId) {
      //alert('Returning the order.');
      // Implement the return logic here
      $.ajax({
        url:"/returnProduct",
        type:"POST",
        data:{orderId:orderId},
        success:(response)=>{
          if(response.status){
            location.reload()
          }
        }
      })
    }
  </script>
  
</body>
</html>
